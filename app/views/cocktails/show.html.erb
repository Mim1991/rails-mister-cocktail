<div class="container-form">
<h1> <%= @cocktail.name %> </h1>
<% @cocktail.doses.each do |dose| %> 
<p>  <%= dose.description %>  </p>
<p>  <%= dose.ingredient.name %>  </p>
<%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
	<%= f.association :ingredient %>
	<% if @dose.errors.any? %>
	<p>*ingredient missing or amount not specified</p>
	<% end %>
	<%= f.submit %>
<% end %>
</div>