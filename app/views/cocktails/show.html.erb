<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %> 
  <%= dose.description %> 
  <%= dose.ingredient.name %> 
<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
	<%= f.association :ingredient %>
	<% if @dose.errors.any? %>
	<p>*ingredient missing or amount not specified</p>
	<% end %>
	<%= f.submit %>
<% end %>





<%= link_to "Back to List", cocktails_path  %>
<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail)  %>